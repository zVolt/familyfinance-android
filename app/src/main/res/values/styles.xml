<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/md_blue_grey_900</item>
        <item name="colorPrimaryDark">@color/md_black</item>
        <item name="colorAccent">@color/md_grey_500</item>
        <item name="android:background">@color/md_blue_grey_900</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Login">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="AppTheme.Text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:textSize">@dimen/text_size_md</item>
    </style>

    <style name="AppTheme.Text.Light" parent="AppTheme.Text">
        <item name="android:textColor">@color/md_grey_100</item>
    </style>
    <style name="AppTheme.Text.Light.Small" parent="AppTheme.Text.Light">
        <item name="android:textSize">@dimen/text_size_sm</item>
    </style>
    <style name="AppTheme.Text.Light.Large" parent="AppTheme.Text.Light">
        <item name="android:textSize">@dimen/text_size_lg</item>
    </style>

    <style name="AppTheme.Text.Dark" parent="AppTheme.Text">
        <item name="android:textColor">@color/md_grey_900</item>
    </style>
    <style name="AppTheme.Text.Dark.Small" parent="AppTheme.Text.Dark">
        <item name="android:textSize">@dimen/text_size_sm</item>
    </style>
    <style name="AppTheme.Text.Dark.Large" parent="AppTheme.Text.Dark">
        <item name="android:textSize">@dimen/text_size_lg</item>
    </style>

    <style name="AppTheme.Text.CardHeading" parent="AppTheme.Text.Light.Large">
        <item name="android:fontFamily">@font/robotomono_light</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
    </style>

</resources>
