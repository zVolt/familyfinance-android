<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.DarkToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.Dark">
        <item name="colorPrimary">@color/md_blue_grey_900</item>
        <item name="colorPrimaryDark">@color/md_black</item>
        <item name="colorAccent">@color/md_grey_500</item>
        <item name="android:background">@color/md_blue_grey_900</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NavDrawer">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textLight</item>
        <item name="android:textColorSecondary">@color/textLight</item>

<!--        <item name="android:colorAccent">@color/colorAccent</item>-->
<!--        <item name="android:colorPressedHighlight">@color/colorAccent</item>-->
<!--        <item name="android:colorControlActivated">@color/colorAccent</item>-->
<!--        <item name="android:colorActivatedHighlight">@color/colorAccent</item>-->
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Login">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="AppTheme.Text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/open_sans_and_roboto_mono</item>
        <item name="android:textSize">@dimen/text_size_md</item>
    </style>

    <style name="AppTheme.Text.Light" >
        <item name="android:textColor">@color/textLight</item>
    </style>
    <style name="AppTheme.Text.Light.Small">
        <item name="android:textSize">@dimen/text_size_sm</item>
    </style>
    <style name="AppTheme.Text.Light.Large">
        <item name="android:textSize">@dimen/text_size_lg</item>
    </style>
    <style name="AppTheme.Text.Light.CardNumber">
        <item name="android:fontFamily">@font/robotomono_light</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
    </style>

    <style name="AppTheme.Text.Dark">
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textColorHint">@color/md_grey_500</item>
    </style>
    <style name="AppTheme.Text.Dark.Small">
        <item name="android:textSize">@dimen/text_size_sm</item>
    </style>
    <style name="AppTheme.Text.Dark.Large">
        <item name="android:textSize">@dimen/text_size_lg</item>
    </style>

    <style name="AppTheme.Text.Muted">
        <item name="android:textColor">@color/textMuted</item>
    </style>

    <style name="AppTheme.Text.Error">
        <item name="android:textColor">@color/textError</item>
    </style>
    <style name="AppTheme.Text.Error.Small">
        <item name="android:textSize">@dimen/text_size_sm</item>
    </style>

</resources>
