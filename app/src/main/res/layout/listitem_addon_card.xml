<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/name"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:lines="1"
            android:maxLines="1"
            android:textIsSelectable="true"
            tools:text="Bushra Rehman Khan"/>

        <TextView
            android:id="@+id/mob_number"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/name"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/name"
            android:layout_toStartOf="@+id/menu"
            android:lines="1"
            android:maxLines="1"
            android:textIsSelectable="true"
            tools:text="8932061116"/>

        <ImageButton
            android:id="@+id/menu"
            style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/card_number"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@+id/menu"
            android:lines="1"
            android:maxLines="1"
            android:textIsSelectable="true"
            tools:text="1223 4556 3243 2323"/>

        <TextView
            android:id="@+id/tv1"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/card_number"
            android:layout_marginTop="8dp"
            android:text="Expiry"
            />

        <TextView
            android:id="@+id/expires_on"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv1"
            android:layout_below="@id/tv1"
            android:layout_marginTop="4dp"
            tools:text="12/23"/>

        <TextView
            android:id="@+id/tv2"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv1"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/card_number"
            android:layout_marginTop="8dp"
            android:text="CVV"
            />

        <TextView
            android:id="@+id/cvv"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/tv2"
            android:layout_below="@id/tv1"
            android:layout_marginTop="4dp"
            android:gravity="end"
            tools:text="435"/>

        <ImageView
            android:id="@+id/updated_by"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/cvv"
            android:layout_marginTop="8dp"
            android:gravity="end"
            tools:src="@color/colorAccent"
            tools:text="Zeeshan Khan"/>

        <TextView
            android:id="@+id/updated_on"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/updated_by"
            android:layout_marginEnd="4dp"
            android:layout_toLeftOf="@id/updated_by"
            tools:text="5 minutes ago"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>